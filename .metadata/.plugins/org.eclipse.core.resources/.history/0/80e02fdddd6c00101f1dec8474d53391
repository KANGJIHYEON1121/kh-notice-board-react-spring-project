package com.kh.notice_board.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;

import com.kh.notice_board.domain.Comment;
import com.kh.notice_board.domain.Post;

public interface CommentRepository extends JpaRepository<Comment, Long> {
	List<Comment> findByPost(Post post);
	
	Query("SELECT c FROM Comment c WHERE c.post.pno = :pno ORDER BY c.cno ASC")
	List<Comment> findCommentsByPostPno(@Param("pno") Long pno);
}
